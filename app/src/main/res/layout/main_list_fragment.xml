<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/fragmentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_purpure"
        app:menu="@menu/itemsmain"/>

    <View
        android:id="@+id/simpleLine"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/pink_letters"/>

    <FrameLayout
        android:id="@+id/calendBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/simpleLine"
        android:background="@color/pink_letters">

        <ImageButton
            android:id="@+id/btn_left"
            android:padding="10dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_left"
            android:background="@color/pink_letters"/>

        <TextView
            android:id="@+id/dateName"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOY"
            android:textSize="17dp"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:textColor="@color/dark_purpure"/>

        <ImageButton
            android:id="@+id/btn_right"
            android:padding="10dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_right"
            android:background="@color/pink_letters"/>

    </FrameLayout>

    <View
        android:id="@+id/simpleLine2"
        app:layout_constraintTop_toBottomOf="@id/calendBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_purpure"/>

    <Button
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aÃ±adir entrenamiento"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:textColor="@color/dark_purpure"
        android:backgroundTint="@color/pink_letters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>