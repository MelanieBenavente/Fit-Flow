<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ParentText">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NormalText" parent="ParentText">
        <item name="android:textColor">@color/text_color_normal</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="GenericButton">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_purpure</item>
        <item name="android:backgroundTint">@color/pink_letters</item>
    </style>

    <style name="GenericButtonWhite">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_purpure</item>
        <item name="android:background">@drawable/border_btn</item>
    </style>

    <style name="CalendarHeader">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_l_black" parent="ParentText">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_l_white" parent="text_l_black">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_m" parent="ParentText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_m_black" parent="text_m">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_m_hint" parent="text_m">
        <item name="android:textColor">@drawable/edittext_hint_color</item>
    </style>

    <style name="text_m_black_bg_purple" parent="text_m_black">
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/category_serie_title</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="text_s" parent="ParentText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_s_gray" parent="text_s">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="text_s_purple_btn" parent="text_s">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/home_high_purple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ParentTitle">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="text_xl" parent="ParentTitle">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="text_xl_home_title" parent="text_xl">
        <item name="android:textColor">@color/title_gray_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_l" parent="ParentTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_l_home_btn" parent="ParentTitle">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>